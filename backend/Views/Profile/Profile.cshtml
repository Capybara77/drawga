@model List<Board>

@section Scripts
{
    <script src="/js/search.js"></script>
}

<main class="user-wrapper">
    <div class="user-container">
        <div class="boards-container">
            <h1 class="user-title">Ваши доски</h1>
            <div class="boards-filter-container">
                <input class="boards-find"
                       type="text"
                       placeholder="Название доски" />
                <div class="filter-buttons-container">
                    <button class="filter-button boards-create">
                        Создать доску
                    </button>
                    <button class="filter-button boards-clear-all">
                        Удалить все
                    </button>
                </div>
            </div>

            <div class="modal-submit" style="display: none;">
                <div class="modal-submit-content">
                    <h1 class="modal-header">Вы уверены, что хотите удалить все доски?</h1>
                    <p>Это действие нельзя отменить</p>
                    <div class="modal-buttons">
                        <button class="modal-button modal-submit-button">Да, удалить</button>
                        <button class="modal-button modal-cancel-button">Отменить</button>
                    </div>
                </div>
            </div>

            <ul class="boards-list">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <li class="board-item">
                        <div class="board" >
                            <button class="user-button board-item-delete">
                                <img src="/icons/x-circle.svg"
                                     class="board-item-delete-icon" />
                            </button>
                        </div>
                        <h2 class="board-item-title">@Model[i].Name</h2>
                    </li>
                }
            </ul>
        </div>
    </div>
</main>


<script>
    const clearAllButton = document.querySelector('.boards-clear-all')
    const modalWindow = document.querySelector('.modal-submit')
    const modalSubmitButton = document.querySelector('.modal-submit-button')
    const modalCancelButton = document.querySelector('.modal-cancel-button')

    clearAllButton.addEventListener('click', () => {
        modalWindow.style.display = "grid"
    })

    modalSubmitButton.addEventListener('click', () => {
        modalWindow.style.display = "none"
    })

    modalCancelButton.addEventListener('click', () => {
        modalWindow.style.display = "none"
    })

    window.addEventListener('click', (e) => {
        if (e.target === modalWindow) {
            modalWindow.style.display = "none"
        }
    })
</script>